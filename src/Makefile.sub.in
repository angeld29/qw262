CC=@CC@
LN=@LN@
MKDEP=@MKDEP@
ASMFLAGS=@ASMFLAGS@ -x assembler-with-cpp

TEMP=$(SOURCES:.c=.o)
OBJECTS=$(addprefix $(PREFIX)/,$(TEMP:.s=.o))


all:		$(SOURCES) .depend $(TARGET)

depend:
		@$(MKDEP) $(CFLAGS) $(INCFLAGS) $(SOURCES)

.depend:	depend


$(PREFIX)/%.o: %.c
		$(CC) $(CFLAGS) $(INCFLAGS) -c $< -o $@

$(PREFIX)/%.o: %.s
		$(CC) $(CFLAGS) $(INCFLAGS) $(ASMFLAGS) -c $< -o $@

$(TARGET):	$(OBJECTS) $(EXTRA)
		$(CC) $(LDFLAGS) -o $@ $^ $(LIBS)
